---
interface Props {
  primaryCtaHref?: string;
  secondaryCtaHref?: string;
}

const {
  primaryCtaHref = "/projects",
  secondaryCtaHref = "/resume",
} = Astro.props as Props;
---

<section class="border-b border-slate-800 bg-gradient-to-b from-slate-950 via-slate-950 to-slate-900">
  <div class="mx-auto flex max-w-5xl flex-col gap-10 px-4 py-14 sm:px-6 sm:py-20 lg:flex-row lg:items-center lg:gap-12 lg:px-8">
    <div class="flex-1 space-y-6">
      <p class="text-xs font-semibold uppercase tracking-[0.2em] text-teal-300">
        Portfolio
      </p>
      <h1 class="text-balance text-3xl font-semibold tracking-tight text-slate-50 sm:text-4xl lg:text-5xl">
        Systems-minded Data Engineer &amp;<br class="hidden sm:block" />
        Quant-oriented Analyst.
      </h1>
      <p class="max-w-xl text-sm leading-relaxed text-slate-300 sm:text-base">
        I design and build reliable data systems, machine learning pipelines, and decision-support
        tooling for complex domains—from regulated GovCon environments to fast-moving
        quantitative and AI-driven products.
      </p>
      <div class="flex flex-wrap gap-3">
        <a
          href={primaryCtaHref}
          class="inline-flex items-center justify-center rounded-full bg-teal-400 px-4 py-2 text-sm font-semibold text-slate-950 shadow-sm transition hover:bg-teal-300 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-teal-400 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-950"
        >
          View key projects
        </a>
        <a
          href={secondaryCtaHref}
          class="inline-flex items-center justify-center rounded-full border border-slate-700 px-4 py-2 text-sm font-semibold text-slate-100 transition hover:border-teal-400 hover:text-teal-300 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-teal-400 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-950"
        >
          View resume
        </a>
      </div>
      <dl class="mt-4 grid max-w-xl grid-cols-2 gap-4 text-xs text-slate-300 sm:text-sm">
        <div>
          <dt class="text-slate-500">Focus areas</dt>
          <dd class="font-medium">
            Data engineering · AI/ML · Quant methods · GovCon analytics
          </dd>
        </div>
        <div>
          <dt class="text-slate-500">What I care about</dt>
          <dd class="font-medium">
            Systems thinking · signal over noise · explainable impact
          </dd>
        </div>
      </dl>
    </div>
    <div class="flex-1 lg:flex-shrink-0">
      <div class="relative mx-auto max-w-md rounded-2xl border border-slate-800 bg-slate-900/60 p-5 shadow-lg backdrop-blur lg:max-w-sm">
        <p class="mb-4 text-xs font-semibold uppercase tracking-[0.18em] text-slate-400">
          Snapshot
        </p>
        <dl class="grid grid-cols-2 gap-4 text-xs text-slate-200 sm:text-sm">
          <div class="space-y-1">
            <dt class="text-slate-500">Pipelines shipped</dt>
            <dd class="text-base font-semibold text-teal-300">10+</dd>
            <dd class="text-[0.7rem] text-slate-500">Batch &amp; streaming, monitored</dd>
          </div>
          <div class="space-y-1">
            <dt class="text-slate-500">ML/Quant projects</dt>
            <dd class="text-base font-semibold text-teal-300">15+</dd>
            <dd class="text-[0.7rem] text-slate-500">From modeling to evaluation</dd>
          </div>
          <div class="space-y-1">
            <dt class="text-slate-500">Dashboards &amp; tools</dt>
            <dd class="text-base font-semibold text-teal-300">20+</dd>
            <dd class="text-[0.7rem] text-slate-500">GovCon &amp; analytics decision-support</dd>
          </div>
          <div class="space-y-1">
            <dt class="text-slate-500">Stack familiarity</dt>
            <dd class="text-base font-semibold text-teal-300">Python · SQL · AWS</dd>
            <dd class="text-[0.7rem] text-slate-500">Plus D3, R, experimentation</dd>
          </div>
        </dl>
      </div>
    </div>
  </div>
</section>


