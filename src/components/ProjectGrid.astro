---
interface Project {
  title: string;
  slug: string;
  type: string;
  summary: string;
  tags: string[];
}

interface Props {
  projects: Project[];
}

const { projects } = Astro.props as Props;
---

<section class="border-b border-slate-800 bg-slate-950">
  <div class="mx-auto max-w-5xl px-4 py-14 sm:px-6 lg:px-8">
    <header class="mb-8 flex flex-col justify-between gap-4 sm:flex-row sm:items-end">
      <div>
        <h2 class="text-sm font-semibold uppercase tracking-[0.2em] text-teal-300">
          Selected projects
        </h2>
        <p class="mt-2 max-w-2xl text-sm text-slate-300 sm:text-base">
          A sampling of AI/ML, quant, data engineering, GovCon analytics, and D3 visualization work.
        </p>
      </div>
      <a
        href="/projects"
        class="text-xs font-semibold text-teal-300 hover:text-teal-200"
      >
        View all projects â†’
      </a>
    </header>
    <div class="grid gap-5 md:grid-cols-2">
      {projects.map((project) => (
        <a
          href={`/projects/${project.slug}`}
          class="group flex h-full flex-col rounded-xl border border-slate-800 bg-slate-900/60 p-4 shadow-sm transition hover:border-teal-400 hover:shadow-lg focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-teal-400 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-950"
        >
          <h3 class="text-sm font-semibold text-slate-50 group-hover:text-teal-200">
            {project.title}
          </h3>
          <p class="mt-1 text-xs font-medium uppercase tracking-[0.18em] text-slate-400">
            {project.type}
          </p>
          <p class="mt-2 flex-1 text-xs text-slate-300">
            {project.summary}
          </p>
          <div class="mt-3 flex flex-wrap gap-1.5">
            {project.tags.map((tag) => (
              <span class="inline-block rounded-full bg-slate-800 px-2 py-0.5 text-[0.65rem] font-medium text-slate-300 whitespace-nowrap max-w-full truncate">
                {tag}
              </span>
            ))}
          </div>
        </a>
      ))}
    </div>
  </div>
</section>


