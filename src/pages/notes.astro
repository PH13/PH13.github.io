---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const notes = await getCollection("notes");
---

<BaseLayout title="Notes â€“ Peter Hagen">
  <section class="border-b border-slate-800 bg-slate-950">
    <div class="mx-auto max-w-3xl px-4 py-14 sm:px-6 lg:px-8">
      <header class="mb-6 space-y-2">
        <h1 class="text-2xl font-semibold tracking-tight text-slate-50 sm:text-3xl">
          Notes
        </h1>
        <p class="max-w-2xl text-sm text-slate-300 sm:text-base">
          Light-weight notes on data engineering, AI/ML, quant methods, and analytics practice.
        </p>
      </header>
      {notes.length > 0 ? (
        <ul class="space-y-3 text-sm text-slate-200 sm:text-base">
          {notes.map((note) => (
            <li>
              <a href={`/notes/${note.slug}`} class="text-slate-100 hover:text-teal-300 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-teal-400 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-950 rounded">
                {note.data.title}
              </a>
              {note.data.summary && (
                <p class="text-xs text-slate-400">
                  {note.data.summary}
                </p>
              )}
            </li>
          ))}
        </ul>
      ) : (
        <p class="text-sm text-slate-400 italic">No notes yet. Check back soon!</p>
      )}
    </div>
  </section>
</BaseLayout>


